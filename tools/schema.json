{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "Requirement Module",
    "type": "object",

    "definitions": {
        "requirement": {
            "type": "object",
            "required": ["type", "id", "title", "descr"],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["requirement"]
                },
                "id": {
                    "type": "number"
                },
                "title": {
                    "type": "string"
                },
                "descr": {
                    "type": "string"
                },
                "parent": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "partition": {
                    "type": "string",
                    "enum": ["", "FC", "FCS", "FCP", "FCPS", "NAV", "NAVS", "EP", "CS", "AF"]
                }
            }
        },
        "design-decision": {
            "type": "object",
            "required": ["type", "id", "title", "reason"],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["design-decision"]
                },
                "id": {
                    "type": "number"
                },
                "title": {
                    "type": "string"
                },
                "descr": {
                    "type": "string"
                },
                "reason": {
                    "type": "string"
                }
            }
        }
    },

    "required": ["title", "id", "requirements"],
    "properties": {
        "title": {
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "requirements": {
            "type": "array",
            "items": {
                "oneOf": [
                    {"$ref": "#/definitions/requirement"},
                    {"$ref": "#/definitions/design-decision"}
                ]
            }
        }
    }
}